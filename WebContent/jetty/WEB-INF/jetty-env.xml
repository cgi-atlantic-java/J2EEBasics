<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">
  <!--
    Configure a custom Properties object in a JNDI entry.
    On a real server, this file could be merged into the server jetty-env.xml file.
  -->
  <New class="org.eclipse.jetty.plus.jndi.Resource">
     <Arg>config/Properties</Arg>
     <Arg>
       <New class="java.util.Properties">
         <Call name="setProperty">
           <Arg>key1</Arg>
           <Arg>value1</Arg>
         </Call>
         <Call name="setProperty">
           <Arg>key2</Arg>
           <Arg>value2</Arg>
         </Call>
         <Call name="setProperty">
           <Arg>container</Arg>
           <Arg>jetty</Arg>
         </Call>
       </New>
     </Arg>
  </New>
 
  <!-- Create a datasource - assume the runtime classpath contains the derby.jar in the JDK -->
